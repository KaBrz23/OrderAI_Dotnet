@{
    ViewData["Title"] = "Página de Cadastro";
}

<div class="text-left">
    <form asp-controller="Usuario" asp-action="EfetuarCadastro" method="post">
        <div class="form-group">
            <label for="nome" class="form-label">Nome Completo</label>
            <input name="nome" class="form-control form-control-lg" type="text" id="nome">
        </div>
        <div class="form-group">
            <label for="email" class="form-label">Endereço de E-mail</label>
            <input name="email" type="email" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="form-group">
            <label for="senha" class="form-label">Crie uma senha</label>
            <input name="senha" type="password" id="inputPassword5" class="form-control">
        </div>
        <div class="form-group">
            <label for="telefone" class="form-label">Número de telefone</label>
            <input name="telefone" class="form-control form-control-lg" type="text" id="telefone">
        </div>
        <div class="form-group">
            <label for="endereco" class="form-label">Endereço</label>
            <input name="endereco" class="form-control form-control-lg" type="text" id="endereco">
        </div>
        <div class="form-group">
            <label for="cep" class="form-label">CEP</label>
            <input name="cep" class="form-control form-control-lg" type="text" id="cep">
        </div>
        <div class="form-group">
            <label for="cidade" class="form-label">Cidade</label>
            <input name="cidade" class="form-control form-control-lg" type="text" id="cidade">
        </div>
        <div class="form-group">
            <label for="estado" class="form-label">Estado</label>
            <input name="estado" class="form-control form-control-lg" type="text" id="estado">
        </div>
        <div class="form-group">
            <label for="cpf" class="form-label">CPF</label>
            <input name="cpf" class="form-control form-control-lg" type="text" id="cpf">
        </div>
        <div class="form-group">
            <label for="dataNascimento" class="form-label">Data de Nascimento</label>
            <input name="dataNascimento" class="form-control form-control-lg" type="date" id="dataNascimento">
        </div>
        <div class="form-group">
            <label for="dataCadastro" class="form-label">Data de Cadastro</label>
            <input name="dataCadastro" class="form-control form-control-lg" type="date" id="dataCadastro" placeholder="Data de Cadastro">
        </div>
        <div class="form-group">
            <label for="sexo" class="form-label">Sexo</label>
            <input name="sexo" class="form-control form-control-lg" type="text" id="sexo">
        </div>
        <p></p>
        <button type="submit" class="btn btn-primary btn-lg">Cadastrar</button>
    </form>
</div>

